<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainCentralMenuButtonOverlay">
        <item name="cornerSizeTopLeft">95%</item>
        <item name="cornerSizeTopRight">95%</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="MainCentralMenuButtonStyle">
        <item name="textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/MainCentralMenuButtonOverlay</item>
        <item name="backgroundTint">@color/background</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="iconTint">@color/text_color</item>
    </style>

    <style name="MenuButtonStyle">
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/MainCentralMenuButtonOverlay</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="iconTint">@color/text_color</item>
    </style>

</resources>
